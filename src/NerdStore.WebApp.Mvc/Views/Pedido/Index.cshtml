@model IEnumerable<NerdStore.Vendas.Application.Queries.ViewModels.PedidoViewModel>
@{
    ViewData["Title"] = "Pedido";
}

<div class="container">
    <h1>Meus pedidos</h1>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Pedido</th>
                    <th>Valor Total</th>
                    <th>Data de Cadastro</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pedido in Model.OrderByDescending(x => x.DataCadastro))
                {
                    <tr>
                        <td>@pedido.Id</td>
                        <td>@pedido.ValorTotal.ToString("C")</td>
                        <td>@pedido.DataCadastro.ToShortDateString()</td>
                        <td>@pedido.StatusDescricao</td>
                        <td>
                            <a asp-controller="Pedido" asp-action="PedidoDetalhe" asp-route-id="@pedido.Id" class="btn btn-link">Ver detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>